<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.droidcrypt.Embed"
    android:orientation="vertical"
    android:background="@color/white"
    android:windowSoftInputMode="adjustResize">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Account Type"
        android:id="@+id/textview_accountType"
        android:height="35dp"
        android:textColor="@color/blue_grey_500"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/editText_accountType"
        android:inputType="text"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="@color/blue_grey_800"
        android:height="35dp"
        android:textSize="20sp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Enter Account Name"
        android:id="@+id/textView"
        android:height="35dp"
        android:textColor="@color/blue_grey_500"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:id="@+id/account"
        android:inputType="text"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/blue_grey_800"
        android:height="35dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Enter Password"
        android:id="@+id/textView_passView"
        android:layout_gravity="center"
        android:height="35dp"
        android:textColor="@color/blue_grey_500"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/blue_grey_800"
        android:height="35dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:id="@+id/textView_confirmPass"
        android:height="35dp"
        android:textColor="@color/blue_grey_500"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/editText_confirmPass"
        android:inputType="textPassword"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_grey_800"
        android:height="35dp"
        android:textSize="20sp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/hugostart"
        android:text="Proceed"
        android:textSize="20sp"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClickHugoStart"
        android:textColor="@color/white_text"
        android:background="@color/indigo_400"
        android:height="25dp"
        android:layout_marginTop="20dp" />

</LinearLayout>
